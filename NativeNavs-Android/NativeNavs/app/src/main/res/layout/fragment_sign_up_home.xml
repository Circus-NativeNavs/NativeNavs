<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.signup.SignUpHomeFragment">

        <include
            android:id="@+id/signup_title_layout"
            layout="@layout/layout_title_back"
            app:titleText="@string/sign_login_signup" />

        <ImageView
            android:id="@+id/signup_logo_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/logo_text_nativenavs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_email_btn"
            style="@style/btn_long_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_page"
            android:background="@drawable/shape_round_10_white"
            android:paddingHorizontal="70dp"
            android:text="@string/sign_email_signup"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_logo_iv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_google_btn"
            style="@style/btn_long_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round_10_white"
            android:drawableStart="@drawable/logo_google_xml"
            android:paddingHorizontal="70dp"
            android:text="@string/sign_google_signup"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_email_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>