<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.tour.TourWishListFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/bold"
                android:id="@+id/tour_wish_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_wish_list_title"
                android:textSize="44sp"
                android:paddingStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tour_wish_list_wv"/>

            <WebView
                android:id="@+id/tour_wish_list_wv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tour_wish_list_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>