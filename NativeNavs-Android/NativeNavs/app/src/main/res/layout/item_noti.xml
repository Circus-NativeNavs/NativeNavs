<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_noti_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="@dimen/margin_horizontal_page"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/item_noti_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_nativenavs" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_noti_tv"
            style="@style/regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/margin_horizontal_page"
            app:layout_constraintBottom_toBottomOf="@+id/item_noti_cv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_noti_cv"
            app:layout_constraintTop_toTopOf="@+id/item_noti_cv"
            tools:text="아린님의 Travel은 어떠셨나요? 다음 Trav분들을 위해 리뷰를 남겨주세요!" />

        <View
            android:id="@+id/setting_line_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/stroke_default"
            android:background="@color/gray_d9d9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
